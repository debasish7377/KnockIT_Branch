<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/discountedPrice"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/create_store_ed_bg"
        android:elevation="3dp"
        android:fontFamily="@font/pt_serif_regular"
        android:paddingStart="5dp"
        android:hint="Discounted Price"
        android:textColor="@color/green"
        android:textColorHint="@color/colorHint"
        android:layout_marginTop="10dp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OriginalPrice"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/create_store_ed_bg"
        android:elevation="3dp"
        android:fontFamily="@font/pt_serif_regular"
        android:hint="Original Price"
        android:inputType="number"
        android:paddingStart="5dp"
        android:textColor="@color/green"
        android:textColorHint="@color/colorHint"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discountedPrice" />

    <EditText
        android:id="@+id/qty"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/create_store_ed_bg"
        android:elevation="3dp"
        android:fontFamily="@font/pt_serif_regular"
        android:hint="ex - 1kg apple"
        android:paddingStart="5dp"
        android:textColor="@color/green"
        android:textColorHint="@color/colorHint"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OriginalPrice" />

    <EditText
        android:id="@+id/avl_qty"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/create_store_ed_bg"
        android:elevation="3dp"
        android:fontFamily="@font/pt_serif_regular"
        android:hint="Available Quantity"
        android:inputType="number"
        android:paddingStart="5dp"
        android:textColor="@color/green"
        android:textColorHint="@color/colorHint"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qty" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Ok_btn"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/login_btn_bg"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/pt_serif_regular"
        android:text="Ok"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avl_qty" />

</androidx.constraintlayout.widget.ConstraintLayout>