<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/greenColorSub"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="#EBFFE2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/redColorSub"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="#FFDFDF" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/yellowColorSub"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="#FFFCE0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/blueColorSub"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="#F0F4FF" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/purpleColorSub"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="#F8E6FF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
            android:id="@+id/categoryTextSub"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:background="@drawable/create_store_ed_bg"
            android:elevation="3dp"
            android:fontFamily="@font/pt_serif_regular"
            android:hint="Select Category"
            android:paddingStart="5dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/create_store_ed_bg"
        android:elevation="3dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout25">

        <EditText
            android:id="@+id/subCategoryTextSub"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/create_store_ed_bg"
            android:fontFamily="@font/pt_serif_regular"
            android:hint="Enter Sub Category"
            android:paddingStart="5dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/circle_image_bg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:backgroundTint="#E7EAFB"
        android:gravity="center"
        android:background="@drawable/circle_image_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" >
        <ImageView
            android:id="@+id/circleImageViewSub"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/shirt"
            android:layout_gravity="center"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/okBtnSub"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/login_btn_bg"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/pt_serif_regular"
        android:text="Submit"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select image make sure image png format"
        app:layout_constraintEnd_toEndOf="@+id/circle_image_bg"
        app:layout_constraintStart_toStartOf="@+id/circle_image_bg"
        app:layout_constraintTop_toBottomOf="@+id/circle_image_bg" />

    <TextView
        android:id="@+id/selectedColorSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>