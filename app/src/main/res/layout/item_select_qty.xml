<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/qty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="1 kg Apple"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="₹120"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/qty_text"
        app:layout_constraintEnd_toStartOf="@+id/avl_qty_text"
        app:layout_constraintStart_toEndOf="@+id/qty_text"
        app:layout_constraintTop_toTopOf="@+id/qty_text" />

    <TextView
        android:id="@+id/cutted_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₹150"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/price_text"
        app:layout_constraintStart_toEndOf="@+id/price_text" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/cutted_price_text"
        app:layout_constraintEnd_toEndOf="@+id/cutted_price_text"
        app:layout_constraintStart_toStartOf="@+id/cutted_price_text"
        app:layout_constraintTop_toTopOf="@+id/cutted_price_text" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/avl_qty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 left"
        android:textSize="12dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>