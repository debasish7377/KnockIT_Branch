<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/circle_image_bg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:backgroundTint="#E7EAFB"
        android:gravity="center"
        android:background="@drawable/circle_image_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/sub_CategoryImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/shirt"
        android:layout_gravity="center"
        android:scaleType="fitCenter"/>
    </LinearLayout>

    <TextView
        android:id="@+id/sub_CategoryTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="T Shirt"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:gravity="center"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/circle_image_bg"
        app:layout_constraintStart_toStartOf="@+id/circle_image_bg"
        app:layout_constraintTop_toBottomOf="@+id/circle_image_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>